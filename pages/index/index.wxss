/* pages/index/index.wxss */
@import "../../assets/styles/ft-icon.wxss";

page{
  background: #F4F4F4;
}

.page-index{
  background: #FFFFFF;
  margin-bottom: 16rpx;
}

.ad{
  padding-top: 30rpx;
}

.page-entry {
  display: flex;
  height: 188rpx;
  justify-content: space-around;
  align-items: center;
}
.entry-image{
  display: block;
  margin: 0 auto;
  width: 92rpx;
  height: 92rpx;
}
.entry-title{
  font-size: 28rpx;
  line-height: 28rpx;
  padding-top: 10rpx;
  color: #67462B;
}

.dynamics-body, .courses-body, .performs-body, .races-body {
  padding: 0 32rpx;
}

.books{
  overflow: hidden;
}
.books-body{
  margin: 3.4%;
  display: flex;
  flex-wrap: wrap;
}

.book-box{
  width: 32%;
  height: 285rpx;
  margin: 15rpx .66666% 0;
  display: flex;
  flex-direction: column;
}

.book-image{
  display: block;
  width: 100%;
  flex: 1;
}
.book-title{
  text-align: center;
  font-size: 26rpx;
  line-height: 34rpx;
  color: #333;
  font-weight: bold;
  padding: 12rpx 5rpx 15rpx;
}

.show-more {
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #666;
  padding: 0 32rpx;
}

.modal-content{
  padding: 32rpx 0;
}

.modal-content-text{
  font-size: 24rpx;
  line-height: 1.3;
  padding: 6rpx 0;
  color: #333;
}

.regulations-entry{
  font-size: 24rpx;
  line-height: 1.3;
  color: #108EE9;
  padding: 6rpx 0;
  margin-top: 24rpx;
  text-decoration: underline;
}
