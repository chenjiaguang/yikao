/* components/ftBanners/ftBanners.wxss */

.banners-box{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}
.banner-swiper{
  width: 100%;
  height: 100%;
  flex: 1;
  position: relative;
  z-index: 1;
}
.banner-item-content{
  height: 100%;
  position: relative;
  overflow: hidden;
}
.banner-image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  color: #fff;
  padding: 8rpx 20rpx 0;
  font-size: 32rpx;
  line-height: 40rpx;
  background: rgba(0,0,0,0.3);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.banner-indicator{
  flex-grow: 0;
  flex-shrink: 0;
  width: 100%;
  height: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  bottom: 0;
  z-index: 2;
}
.banner-indicator-item{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin: 0 6rpx;
  box-shadow: 0 0 6rpx 2rpx rgba(255,255,255,0.4);
}