/* components/ftTableList/ftTableList.wxss */

.wrapper{
  width: 100%;
}
.item-box{
  width:100%;
  display: flex;
}
.title-wrapper{
  flex-shrink: 0;
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.title-text{
  display: flex;
  justify-content: flex-end;
}
.title-text-box{
  flex: 1;
  display: flex;
  justify-content: space-between;
  line-height: 1.3;
}
.title-sign{
  flex-shrink: 0;
  flex-grow: 0;
  line-height: 1.3;
}
.title-box{
  height: 0;
  overflow: hidden;
  opacity: 0;
}
.content{
  flex: 1;
  overflow: hidden;
  word-break: break-all;
  line-height: 1.3;
  position: relative;
}
.content-line{
  position: absolute;
  width: 100%;
  height: 0;
  left: 0;
  bottom: 0;
  background: #999;
}