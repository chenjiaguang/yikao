/* components/ftAvatar/ftAvatar.wxss */

.wrapper{
  flex-shrink: 0;
  flex-grow: 0;
  position: relative;
}
.avatar{
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}
.message{
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  background: #FF3A30;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  height: 36rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  border-radius: 18rpx;
}