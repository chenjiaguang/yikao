<!--components/visitingCard/visitingCard.wxml-->
<view class="wrapper" style="width:{{width || 'auto'}};height:{{height || 'auto'}};" catchtap="eleTap" data-ele="wrapper">
  <view wx:if="{{topSeparator}}" class='line-separator-h'></view>
  <view class="container {{imagePosition}}" style="{{containerStyle}}">
    <view class="overview">
      <view wx:if="{{cardData.title}}" style="font-size:{{fontSize.title}}rpx;color:{{color.title}};text-align:{{textAlign}};-webkit-line-clamp:{{maxLine.title || '1'}}" class="title title{{maxLine.title || '1'}}" catchtap="eleTap" data-ele="title">{{cardData.title}}</view>
      <view wx:if="{{cardData.content}}" style="font-size:{{fontSize.content}}rpx;color:{{color.content}};text-align:{{textAlign}};-webkit-line-clamp:{{maxLine.content > 1 ? maxLine.content : (cardData.image ? '2' : '1')}}" class="content content{{maxLine.content > 1 ? maxLine.content : (cardData.image ? '2' : '1')}}" catchtap="eleTap" data-ele="content">{{cardData.content}}</view>
      <view wx:if="{{cardData.sign1 || cardData.sign2}}" class="state" style="justify-content:{{textAlign === 'center' ? 'center' : 'space-between'}}">
        <view wx:if="{{cardData.sign1}}" style="font-size:{{fontSize.sign1}}rpx;color:{{color.sign1}};-webkit-line-clamp:{{maxLine.sign1 || '1'}};" class="sign sign1 {{(maxLine.sign1 === 1 || maxLine.sign1 === '1') ? 'single' : ''}}" catchtap="eleTap" data-ele="sign1">{{cardData.sign1}}</view>
        <view wx:if="{{cardData.sign2}}" style="font-size:{{fontSize.sign2}}rpx;color:{{color.sign2}};-webkit-line-clamp:{{maxLine.sign2 || '1'}};" class="sign sign2 {{(maxLine.sign2 === 1 || maxLine.sign2 === '1') ? 'single' : ''}}" catchtap="eleTap" data-ele="sign2">{{cardData.sign2}}</view>
      </view>
    </view>
    <!-- 有title、content、state、三者之一，且有图片时才有spacing -->
    <view wx:if="{{(cardData.title || cardData.content || cardData.state) && cardData.image}}" class='spacing'></view>
    <image wx:if="{{cardData.image}}" style="{{imageStyle}}" class="image" src="{{cardData.image}}" mode="aspectFill" catchtap="eleTap" data-ele="image" />
  </view>
  <view wx:if="{{bottomSeparator}}" class='line-separator-h'></view>
</view>