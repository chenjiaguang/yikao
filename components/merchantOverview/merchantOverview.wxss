/* components/merchantoverview/merchantoverview.wxss */
@import "../../app.wxss";

.merchant-wrapper {
  padding: 27rpx 16rpx;
  margin-top: 30rpx;
  position: relative;
  overflow: visible;
  border-radius: 12rpx;
  border: 1px solid #999;
}

@media screen and (min-resolution: 2dppx) {
  .merchant-wrapper {
    border: 1rpx solid #999;
  }
}

.merchant-border {
  position: absolute;
  width: 200%;
  height: 200%;
  left: -50%;
  top: -50%;
  box-sizing: border-box;
  border: 2rpx solid #999;
  border-radius: 8rpx;
  transform: scale(0.5, 0.5);
  transform-origin: 50% 50%;
  z-index: 1;
}

.top {
  display: flex;
  position: relative;
  z-index: 2;
}

.bottom {
  padding-top: 15rpx;
  position: relative;
  z-index: 2;
}

.image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.overview {
  flex: 1;
  overflow: hidden;
}

.title-and-distance {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
  display: flex;
}

.title {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.distance {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.merchant-star {
  height: 54rpx;
}

.merchant-act {
  height: 42rpx;
  display: flex;
  align-items: center;
}

.act-icon {
  margin-right: 10rpx;
}

.act-text {
  font-size: 26rpx;
  color: #999;
  line-height: 30rpx;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.notice {
  display: flex;
  height: 34rpx;
  line-height: 28rpx;
  font-size: 24rpx;
  color: #999;
  padding-top: 15rpx;
  box-sizing: content-box;
}

.icon-notice {
  font-size: 24rpx;
  color: #ff9500;
  margin-right: 10rpx;
}
